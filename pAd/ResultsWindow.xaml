<Window x:Class="Pingvi.ResultsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ResultsWindow" Top="0" Left="2200" Height="20" Width="200" WindowStyle="None" ResizeMode="NoResize"  Background="#002A2A2A"  AllowsTransparency="false" Loaded="Window_Loaded">
    <Border Name="HudBorder" CornerRadius="3" Background="#2A2A2A">
        <RichTextBox VerticalContentAlignment="Center" BorderThickness="0,0,0,0" Background="{x:Null}" >
            <FlowDocument AllowDrop="true" Focusable="False" FontSize="13" ForceCursor="false" TextAlignment="Center" >
                <Paragraph >
                    <Run Text="Vol" Foreground="White"/>
                    <Run Name="CountRun" Text="-" Foreground="White" FontWeight="Bold"/>
                    <Run Text="RB" Foreground="White" />
                    <Run Name="RakeBackRun" Text="-" Foreground="White" FontWeight="Bold"/>
                    <Run Text="Result" Foreground="White"/>
                    <Run Name="ResultRun" Text="-" Foreground="White" FontWeight="Bold" />
                
                </Paragraph>
             



            </FlowDocument>
        </RichTextBox>
    </Border>
</Window>
