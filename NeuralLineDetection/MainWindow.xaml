<Window x:Class="NeuralLineDetection.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button Name="LoadDataButton" Content="LoadData" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="LoadDataButton_Click"/>
        <Button Name="TeachNetworkButton"  Content="Teach" HorizontalAlignment="Left" Margin="90,10,0,0" VerticalAlignment="Top" Width="75" Click="TeachNetworkButton_Click"/>
        <Button Name="TestButton" Content="Test" HorizontalAlignment="Left" Margin="170,10,0,0" VerticalAlignment="Top" Width="75" Click="TestButton_Click"/>
        <Button Name="SaveButton" Content="Save" HorizontalAlignment="Left" Margin="250,10,0,0" VerticalAlignment="Top" Width="75" Click="SaveButton_Click"/>
        <Button Name="LoadNetworkButton" Content="LoadNet" HorizontalAlignment="Left" Margin="330,10,0,0" VerticalAlignment="Top" Width="75" Click="LoadNetworkButton_Click"/>
    </Grid>
</Window>
