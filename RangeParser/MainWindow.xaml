<Window x:Class="RangeParser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="216.579" Width="532.472">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="29*"/>
            <RowDefinition Height="158*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="86*"/>
            <ColumnDefinition Width="129*"/>
            <ColumnDefinition Width="147*"/>
            <ColumnDefinition Width="156*"/>
        </Grid.ColumnDefinitions>
        <TextBox Name="NameTextBox" Margin="2" TextWrapping="Wrap" Text="TextBox" RenderTransformOrigin="0.5,0.5" Grid.Column="1"/>
        <Label  Content="Range name:" Margin="2"/>
        <Button Name="LoadRangeButton" Content="Load" Grid.Column="2" Margin="2" Click="LoadRangeButton_Click"/>
        <Button Name="SaveRangeButton"  Content="Save" Grid.Column="3" Margin="2" Click="SaveRangeButton_Click"/>
        <TextBox Name="RangeBox"  Grid.ColumnSpan="4" Margin="5" Grid.Row="1" TextWrapping="Wrap" Text="AKs"/>

    </Grid>
</Window>
